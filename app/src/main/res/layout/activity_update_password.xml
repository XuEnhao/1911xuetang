<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#F8F9FB"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/updatePass_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/normal_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:text="修改密码"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_19"
            android:textColor="@color/titleTextColor"
            android:gravity="center" />
        <TextView
            android:id="@+id/update_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:textSize="@dimen/sp_15"
            android:textColor="#6317A5"
            android:text="保存"/>
    </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#F8F9FB"
                android:orientation="vertical">

                <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                    android:id="@+id/edit_oldPass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_10"
                    android:background="#ffffff"
                    android:textCursorDrawable="@null"
                    android:cursorVisible="true"
                    android:inputType="textPassword"
                    android:hint="请输入旧密码"
                    android:textSize="@dimen/sp_16" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_title_height_1dp"
                    android:background="#F8F9FB"/>

                <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                    android:id="@+id/edit_newPass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_10"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/shape_fill_edit"
                    android:cursorVisible="true"
                    android:inputType="textPassword"
                    android:hint="请输入新密码"
                    android:textSize="@dimen/sp_16" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/layout_title_height_1dp"
                    android:background="#F8F9FB"/>

                <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                    android:id="@+id/edit_newPassReal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingRight="@dimen/dp_10"
                    android:textCursorDrawable="@null"
                    android:background="@drawable/shape_fill_edit"
                    android:cursorVisible="true"
                    android:inputType="textPassword"
                    android:hint="请再次输入新密码 "
                    android:textSize="@dimen/sp_16" />


            </LinearLayout>


</LinearLayout>