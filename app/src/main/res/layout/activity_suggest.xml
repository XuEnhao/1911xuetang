<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/suggest_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/normal_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:text="反馈建议"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_19"
            android:textColor="#25265E"
            android:gravity="center" />
        <TextView
            android:id="@+id/suggest_commit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#6317A5"
            android:textSize="@dimen/sp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_centerVertical="true"
            android:text="提交"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_17"
        android:layout_marginRight="@dimen/dp_17"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_15"
        android:paddingBottom="@dimen/dp_15"
        android:background="#F8F9FB"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/suggest_edittext"
            android:layout_width="match_parent"
            android:minHeight="@dimen/dp_150"
            android:maxLength="500"
            android:textCursorDrawable="@null"
            android:background="#F8F9FB"
            android:gravity="start"
            android:textSize="@dimen/sp_16"
            android:hint="请填写具体内容帮助我们了解您的意见或建议…"
            android:padding="@dimen/dp_15"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/suggest_textNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/suggest_edittext"
            android:text="0/500"/>
    </RelativeLayout>
</LinearLayout>