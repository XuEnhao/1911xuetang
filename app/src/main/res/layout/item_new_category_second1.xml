<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/shape_main_img">

    <ImageView
        android:id="@+id/item_newCategorySecond_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_97"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_newCategorySecond_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="数码摄影后期高手之路..."
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_newCategorySecond_lecture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/sp_11"
            android:text="讲师:tony"/>
        <TextView
            android:id="@+id/item_newCategorySecond_studyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="58964人学习"
            android:textColor="#666666"
            android:textSize="@dimen/sp_11" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dp_11"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_newCategorySecond_score"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="@dimen/sp_11"
            android:layout_weight="1"
            android:text="评分:4.0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:textColor="#F4555D"
            android:textSize="@dimen/sp_12"
            android:text="¥" />

        <TextView
            android:id="@+id/item_newCategorySecond_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="#F4555D"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:text="1954.00" />


    </LinearLayout>

</LinearLayout>