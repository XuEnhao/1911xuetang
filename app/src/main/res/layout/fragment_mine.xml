<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FB">



    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/fragment_mine"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/fragment_mine_userInfoLinear"
            android:layout_width="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/dp_46"
            android:paddingTop="@dimen/dp_58"
            android:layout_height="wrap_content">
            <!--<RelativeLayout-->
                <!--android:layout_width=""-->
                <!--android:layout_height=""></RelativeLayout>-->
            <com.yijiuyiyiedu.xuetang.module.ui.custom.CircleImageView
                android:id="@+id/fragment_mine_userAvatar"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:src="@mipmap/default_avatar"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_78"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/fragment_mine_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_19"
                        android:layout_weight="1"
                        android:textColor="#25265E"
                        android:text="登录/注册" />
                    <TextView
                        android:id="@+id/fragment_mine_userTime"
                        android:layout_width="@dimen/dp_127"
                        android:background="@drawable/shape_mine_study_time"
                        android:layout_height="match_parent"
                        android:text="学习时间:158小时32分"
                        android:paddingLeft="@dimen/dp_28"
                        android:gravity="center|start"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#7540EE"/>

                </LinearLayout>
                

                <TextView
                    android:id="@+id/fragment_mine_userCompany"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#787993"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/fragment_mine_collectCourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_16">

                <ImageView
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:src="@mipmap/mine_study" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:text="最近学习"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/sp_16" />

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_13"
                    android:src="@mipmap/mine_right_back" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F9FB"/>

            <LinearLayout
                android:id="@+id/fragment_mine_msgManager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_16">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:src="@mipmap/mine_msg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_weight="1"
                    android:text="我的消息"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/sp_16"  />

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_13"
                    android:src="@mipmap/mine_right_back" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F9FB"/>
            <!--兑换课程 隐藏-->
            <LinearLayout
                android:id="@+id/fragment_mine_applyCompanyNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/mine_id" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/titleTextColor"
                    android:textSize="@dimen/sp_16"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="绑定课程ID" />

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_13"
                    android:src="@mipmap/mine_right_back" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#F8F9FB"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/fragment_mine_no_login"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="#ffffff"
            android:orientation="vertical">




        </LinearLayout>
        <!--反馈建议-->
        <LinearLayout
            android:id="@+id/fragment_mine_callService"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/mine_suggest" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/titleTextColor"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="反馈建议" />

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_13"
                    android:src="@mipmap/mine_right_back" />
            </LinearLayout>
        </LinearLayout>
        <!--设置-->
        <LinearLayout
            android:id="@+id/fragment_mine_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/mine_set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/titleTextColor"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:text="设置" />

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_13"
                    android:src="@mipmap/mine_right_back" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
