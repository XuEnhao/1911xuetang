<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#ffffff"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/item_myDownload_img"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_80"
            android:layout_margin="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:background="@mipmap/item_newcourse_course"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_myDownload_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#25265E"
                android:minLines="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="用户画像的搭建与应用"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_myDownload_plan"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#787993"
                    android:layout_height="wrap_content"
                    android:text="已学习99%"/>
                <TextView
                    android:id="@+id/item_myDownload_size"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:textColor="#787993"
                    android:textSize="@dimen/sp_14"
                    android:text="14.2M"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>