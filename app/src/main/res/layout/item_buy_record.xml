<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#eeeeee">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_9"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_buy_record_orderNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_13"
                android:layout_marginBottom="@dimen/dp_11"
                android:maxLines="1"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="#222222"
                android:textSize="@dimen/sp_12"
                android:text="订单编号:2425147423699514" />
            <TextView
                android:id="@+id/item_buy_record_orderType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="#222222"
                android:layout_marginRight="@dimen/dp_10"
                android:text="已支付"/>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#cccccc" />
        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_buy_record_orderImg"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_68"
                android:layout_gravity="center"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/item_buy_record_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="#222222"
                    android:text="党政干部定制研修项目案例教育" />

                <TextView
                    android:id="@+id/item_buy_record_courseNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="#666666"
                    android:text="共计8门课程；300学时" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_buy_record_num"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:textColor="#666666"
                        android:text="数量:100" />
                    <TextView
                        android:id="@+id/item_buy_record_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F4555D"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        android:layout_marginRight="@dimen/dp_11"
                        android:text="￥25356.00"/>
                </LinearLayout>


            </LinearLayout>
            
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:background="#cccccc" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_buy_record_orderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:text="2018-04-21 18:24:36"/>

            <TextView
                android:id="@+id/item_buy_record_SeeNumber"
                android:layout_width="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/shape_record_see"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/sp_12"
                android:textColor="#773685"
                android:text="查看兑换码"/>

            <TextView
                android:id="@+id/item_buy_record_giveNumber"
                android:layout_width="@dimen/dp_80"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_height="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/shape_record_give"
                android:gravity="center"
                android:textSize="@dimen/sp_12"
                android:textColor="#ffffff"
                android:text="赠送兑换码"/>

        </LinearLayout>

       

    </LinearLayout>

</LinearLayout>