<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <View
        android:id="@+id/sonInfo_statusBar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#ffffff">

        <TextView
            android:id="@+id/editSon_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_15"
            android:gravity="center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="#222222"
            android:text="取消" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:text="编辑子账号"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/register_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/sonInfo_companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_20"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:text="Sony中国集团有限公司" />

            <EditText
                android:id="@+id/sonInfo_fillAccount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:focusable="false"
                android:paddingLeft="@dimen/dp_16"
                android:background="@drawable/shape_fill_edit"
                android:minHeight="50dp"
                android:cursorVisible="false"
                android:inputType="phone"
                android:hint="请输入账号(可使用员工手机号)"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/sonInfo_initPass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_16"
                android:background="@drawable/shape_fill_edit"
                android:minHeight="50dp"
                android:cursorVisible="false"
                android:focusable="false"
                android:inputType="textPassword"
                android:hint="请输入初始密码(默认8888)"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/sonInfo_fillStaffName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_16"
                android:background="@drawable/shape_fill_edit"
                android:minHeight="50dp"
                android:cursorVisible="false"
                android:inputType="text"
                android:hint="请输入员工姓名"
                android:textSize="@dimen/sp_14" />

            <EditText
                android:id="@+id/sonInfo_fillStaffJob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:paddingLeft="@dimen/dp_16"
                android:background="@drawable/shape_fill_edit"
                android:minHeight="50dp"
                android:cursorVisible="false"
                android:inputType="text"
                android:hint="请输入员工职位"
                android:textSize="@dimen/sp_14" />


            <com.yijiuyiyiedu.xuetang.widget.StateButton
                android:id="@+id/sonInfo_positiveBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="56dp"
                android:text="确认"
                android:textColor="#ffffff"
                android:textStyle="bold"
                app:normalBackgroundColor="#773685"
                app:pressedBackgroundColor="#9a37b0"
                app:radius="@dimen/dp_5" />

            <com.yijiuyiyiedu.xuetang.widget.StateButton
                android:id="@+id/sonInfo_allClearBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_40"
                android:layout_marginTop="28dp"
                android:text="解除关联"
                android:textColor="#773685"
                android:textStyle="bold"
                app:normalBackgroundColor="#EEEEEE"
                app:pressedBackgroundColor="#9a37b0"
                android:layout_marginBottom="@dimen/dp_20"
                app:radius="@dimen/dp_5" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>