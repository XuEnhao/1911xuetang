<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/userInfo_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:padding="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/normal_back"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_19"
            android:textColor="@color/titleTextColor"
            android:text="个人信息"/>
        <TextView
            android:id="@+id/userInfo_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="#6317a5"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="保存"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/userInfo_scrollView">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F8F9FB"/>
            <LinearLayout
                android:id="@+id/userInfo_avatar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/titleTextColor"
                    android:text="头像"/>
                <com.yijiuyiyiedu.xuetang.module.ui.custom.CircleImageView
                    android:id="@+id/userInfo_avatarImg"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="@dimen/dp_15"
                    android:src="@mipmap/placeholder"/>
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/mine_right_back" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/normal_backgroud"/>
            <!--昵称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/titleTextColor"
                    android:text="昵称"/>
                <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                    android:id="@+id/userInfo_name"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:gravity="end|center_vertical"
                    android:paddingRight="@dimen/dp_20"
                    android:textSize="@dimen/sp_14"
                    android:textCursorDrawable="@null"
                    android:drawablePadding="@dimen/dp_3"
                    android:textColor="#787993"
                    android:text="11111"
                    android:layout_height="@dimen/dp_60"
                    android:background="#ffffff"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/normal_backgroud"/>
            <!--性别-->
            <LinearLayout
                android:id="@+id/userInfo_sexLinear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/titleTextColor"
                    android:text="性别"/>
                <TextView
                    android:id="@+id/userInfo_sexText"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:textColor="#787993"
                    android:text=""/>
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/mine_right_back" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/normal_backgroud"/>

            <!--出生年月-->
            <LinearLayout
                android:id="@+id/userInfo_birthLinear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/titleTextColor"
                    android:text="出生年月"/>
                <TextView
                    android:id="@+id/userInfo_birthText"
                    android:layout_width="wrap_content"
                    android:textColor="#787993"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:text="1"/>
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/mine_right_back" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/normal_backgroud"/>

            <!--所有地区-->
            <LinearLayout
                android:id="@+id/userInfo_areaLinear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/titleTextColor"
                    android:text="所有地区"/>
                <TextView
                    android:id="@+id/userInfo_areaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="#787993"
                    android:text="1"/>
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/mine_right_back" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/normal_backgroud"/>

            <!--职位-->
            <LinearLayout
                android:id="@+id/userInfo_jobLinear"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:gravity="center_vertical"
                android:background="#ffffff"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/titleTextColor"
                    android:text="职位"/>
                <TextView
                    android:id="@+id/userInfo_jobText"
                    android:layout_width="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="#787993"
                    android:layout_height="wrap_content"
                    android:text="1"/>
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_20"
                    android:src="@mipmap/mine_right_back" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/normal_backgroud"/>
            <!--邮箱-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/titleTextColor"
                    android:text="邮箱"/>
                <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                    android:id="@+id/userInfo_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:paddingRight="@dimen/dp_20"
                    android:singleLine="true"
                    android:gravity="end|center_vertical"
                    android:textSize="@dimen/sp_14"
                    android:textCursorDrawable="@null"
                    android:textColor="#787993"
                    android:drawablePadding="@dimen/dp_3"
                    android:text="569283950@qq.com"
                    android:background="#ffffff"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/normal_backgroud"/>
            <!--手机号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/titleTextColor"
                    android:text="手机号"/>
                <TextView
                    android:id="@+id/userInfo_phoneText"
                    android:paddingRight="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#6317A5"
                    android:textSize="@dimen/sp_14"
                    android:text="18888888888"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/normal_backgroud"/>
            <!--公司名称-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_16"
                    android:layout_margin="@dimen/dp_10"
                    android:textColor="@color/titleTextColor"
                    android:text="公司名称"/>
                <TextView
                    android:id="@+id/userInfo_companyText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/dp_20"
                    android:textColor="#6317A5"
                    android:textSize="@dimen/sp_14"
                    android:text="1911未来教育"/>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/normal_backgroud"/>
        </LinearLayout>
    </ScrollView>



</LinearLayout>