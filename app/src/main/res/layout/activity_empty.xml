<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/study_emptyLinear"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_50"
        android:src="@mipmap/empty_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="对不起，暂无"
            android:textColor="#787993"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:id="@+id/nothing_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="心理学"
            android:textColor="#6317A5"
            android:textSize="@dimen/sp_15" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="相关的课程"
            android:textColor="#787993"
            android:textSize="@dimen/sp_15" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/normal_backgroud"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_19"
        android:textColor="@color/titleTextColor"
        android:text="猜你喜欢"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/empty_recyclerView"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:id="@+id/empty_exchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/dp_15"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_18"
            android:src="@mipmap/search_exchange"
            android:layout_gravity="center"
            android:layout_height="@dimen/dp_15" />
        <TextView
            android:layout_width="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#787993"
            android:gravity="center"
            android:text="换一批"
            android:layout_height="wrap_content" />
    </LinearLayout>
    

</LinearLayout>