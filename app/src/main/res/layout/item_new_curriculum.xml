<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#ffffff"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/dp_152"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/item_newCurriculum_img"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_80"
                android:src="@mipmap/item_newcourse_course"
                android:scaleType="centerCrop" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_14"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_newCurriculum_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:minLines="2"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="从区块链到生命，许知远和王小川在1911主题餐厅…"
                android:textColor="#25265E"
                android:textSize="@dimen/sp_15" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_12"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/home_person_number"/>
                <TextView
                    android:id="@+id/item_newCurriculum_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="#787993"
                    android:text="1104"/>
                <TextView
                    android:id="@+id/item_newCurriculum_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥298.00"
                    android:textColor="#FF5F5F"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</android.support.v7.widget.CardView>