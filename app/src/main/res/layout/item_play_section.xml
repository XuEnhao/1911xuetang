<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_play_section_linear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_11"
    android:paddingTop="@dimen/dp_11">

    <TextView
        android:id="@+id/item_play_sectionNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="01"
        android:textColor="#787993"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/item_play_sectionPlay"
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginLeft="@dimen/dp_13"
        android:src="@mipmap/course_details_unplay" />

    <TextView
        android:id="@+id/item_play_sectionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLength="6"
        android:text="业务常见的风控难题 "
        android:textColor="#787993"
        android:textSize="@dimen/sp_15" />


    <TextView
        android:id="@+id/item_play_section_see"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginRight="@dimen/dp_13"
        android:text="可试看"
        android:textColor="#6317A5"
        android:textSize="@dimen/sp_15"
        android:visibility="visible" />


</LinearLayout>