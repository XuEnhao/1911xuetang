<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/shape_register_getverify"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:clickable="true"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_msg_manager_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_28"
            android:layout_marginLeft="@dimen/dp_28"
            android:textSize="@dimen/sp_15"
            android:minLines="2"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#25265E"
            android:lineSpacingExtra="@dimen/dp_6"
            android:text="【恭喜成为1911学堂会员】 恭喜，你已成功加1911学院会员的队伍。" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginRight="@dimen/dp_20"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/item_msg_manager_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="#787993"
                android:layout_marginBottom="@dimen/dp_14"
                android:text="2018-05-26 09：21：23"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_height="1dp"
            android:background="@color/normal_backgroud" />
    </LinearLayout>


</LinearLayout>