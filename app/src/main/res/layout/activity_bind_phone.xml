<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:focusable="true"
    tools:context="com.yijiuyiyiedu.xuetang.module.ui.activitys.RegisterActivity">

    <View
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_back"
            android:layout_width="@dimen/dp_23"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_height="@dimen/dp_40"
            android:src="@mipmap/login_back" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="start"
        android:text="绑定账号"
        android:textColor="#25265E"
        android:textSize="@dimen/sp_28" />
    <!-- 子列表 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_60"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#ffffff"
            android:orientation="horizontal">


            <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                android:id="@+id/register_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#ffffff"
                android:cursorVisible="true"
                android:maxLength="11"
                android:hint="手机号"
                android:inputType="phone"
                android:paddingLeft="@dimen/dp_16"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/phone_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#eeeeee" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="horizontal">


            <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                android:id="@+id/register_verifyNumber"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:cursorVisible="true"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="@dimen/dp_16"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:id="@+id/register_getVerify"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:text="获取验证码"
                android:textColor="#6317A5"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/verifyNumber_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="horizontal">


            <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                android:id="@+id/register_companyId"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:background="#ffffff"
                android:cursorVisible="true"
                android:hint="绑定企业ID（可选）"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp_16"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <TextView
            android:id="@+id/companyId_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:background="#ffffff"
                android:maxLength="16"
                android:cursorVisible="true"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="@dimen/dp_16"
                android:textSize="@dimen/sp_16" />
            <ImageView
                android:id="@+id/register_passwordClear"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_gravity="center"
                android:src="@mipmap/password_img"/>

        </LinearLayout>

        <TextView
            android:id="@+id/password_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_3"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:background="#eeeeee" />

