<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_9"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_category_courseImg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_category_courseTitle"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:textColor="#000000"
                android:textSize="@dimen/sp_14"
                android:text="Office2016 新特性案例专题(能不能放下)" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/item_category_courseVolume"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#666666"
                    android:text="销量15489份" />
                <TextView
                    android:id="@+id/item_category_courseNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#666666"
                    android:text="销量15489份" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_20"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/dp_10"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/item_cate_evaStar1"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="3dp"
                        android:src="@mipmap/personal_star" />

                    <ImageView
                        android:id="@+id/item_cate_evaStar2"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="3dp"
                        android:src="@mipmap/personal_star" />

                    <ImageView
                        android:id="@+id/item_cate_evaStar3"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="3dp"
                        android:src="@mipmap/personal_star" />

                    <ImageView
                        android:id="@+id/item_cate_evaStar4"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginRight="3dp"
                        android:src="@mipmap/personal_star" />

                    <ImageView
                        android:id="@+id/item_cate_evaStar5"
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@mipmap/personal_star" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_category_courseGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_11"
                    android:textColor="#666666"
                    android:text="4.0" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent"
                    android:textColor="#F4555D"
                    android:textSize="@dimen/sp_12"
                    android:text="¥" />

                <TextView
                    android:id="@+id/item_category_coursePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="#F4555D"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_15"
                    android:text="1954.00" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

</LinearLayout>