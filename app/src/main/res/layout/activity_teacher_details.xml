<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eeeeee">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_236"
                        android:src="@mipmap/teacher_details_back"
                        android:scaleType="centerCrop"
                        android:background="#ffffff"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <com.yijiuyiyiedu.xuetang.module.ui.custom.CircleImageView
                            android:id="@+id/teacher_details_avatar"
                            android:layout_marginTop="@dimen/dp_75"
                            android:layout_width="@dimen/dp_75"
                            android:scaleType="centerCrop"
                            android:layout_centerHorizontal="true"
                            android:src="@mipmap/default_avatar"
                            android:layout_height="@dimen/dp_75" />
                        <TextView
                            android:id="@+id/teacher_details_teacherName"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_19"
                            android:textColor="#ffffff"
                            android:gravity="center_horizontal"
                            android:text="橘子老师"/>
                        <TextView
                            android:id="@+id/teacher_details_teacherTitle"
                            android:layout_width="match_parent"
                            android:layout_marginTop="@dimen/dp_12"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:textColor="#ffffff"
                            android:gravity="center_horizontal"
                            android:text="同济大学博士，设计软件通网站创始人"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <View
                            android:id="@+id/teacher_details_statusBar"
                            android:layout_width="0dp"
                            android:layout_height="0dp"/>
                        <ImageView
                            android:id="@+id/teacher_details_back"
                            android:layout_width="@dimen/dp_40"
                            android:src="@mipmap/back_write"
                            android:padding="@dimen/dp_10"
                            android:layout_alignParentLeft="true"
                            android:layout_height="@dimen/dp_40" />
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_20"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/dp_5"
                            android:layout_marginRight="@dimen/dp_10"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_3"
                            android:paddingBottom="@dimen/dp_3"
                            android:gravity="center_vertical"
                            android:background="@drawable/shape_teacher_details_course">
                            <ImageView
                                android:layout_width="@dimen/dp_23"
                                android:layout_height="@dimen/dp_23"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/teacher_details_course"/>
                            <TextView
                                android:id="@+id/teacher_details_courseNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:paddingRight="@dimen/dp_10"
                                android:textSize="@dimen/sp_14"
                                android:textColor="#7540EE"
                                android:gravity="center"
                                android:text="11门课程"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:orientation="horizontal"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:paddingLeft="@dimen/dp_5"
                            android:paddingRight="@dimen/dp_5"
                            android:paddingTop="@dimen/dp_3"
                            android:paddingBottom="@dimen/dp_3"
                            android:gravity="center_vertical"
                            android:background="@drawable/shape_teacher_details_person">
                            <ImageView
                                android:layout_width="@dimen/dp_23"
                                android:layout_height="@dimen/dp_23"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/teacher_details_person"/>
                            <TextView
                                android:id="@+id/teacher_details_personNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:layout_marginLeft="@dimen/dp_5"
                                android:textColor="#6791F6"
                                android:paddingRight="@dimen/dp_10"
                                android:gravity="center"
                                android:text="332学员"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/teacher_details_content"
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/dp_5"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:textSize="@dimen/sp_15"
                        android:textColor="#787993"
                        android:text=" 啦十分考究的，拉萨孔家店官，方的感觉冰冷。的大山里的风景大师，浪费空间萨芬啊收到。了罚款决定，书范德萨了科技大，厦飞拉萨的空间菲，拉斯发撒法丽达，刷卡积分阿斯蒂芬。 "
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="#ffffff"
                    android:textColor="#25265E"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:text="在线课程"
                    android:textSize="@dimen/sp_22" />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/teacher_details_recyclerView"
                    android:layout_width="match_parent"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10"
                    android:background="#ffffff"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
            </LinearLayout>



        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>



</RelativeLayout>