<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fragment_myCourse_img"
            android:layout_width="@dimen/dp_130"
            android:layout_height="@dimen/dp_80"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/placeholder"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginTop="@dimen/dp_15"
            android:scaleType="centerCrop"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_myCourse_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/sp_15"
                android:textColor="#25265E"
                android:text="从区块链到生命，许知远和王小川在1911主题餐厅…" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_myCourse_plan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#787993"
                    android:text="已学习99%" />

                <!--<com.moos.library.CircleProgressView-->
                    <!--android:id="@+id/fragment_myDownload_progress"-->
                    <!--android:layout_width="@dimen/dp_60"-->
                    <!--android:layout_height="@dimen/dp_60"-->
                    <!--android:layout_gravity="center"-->
                    <!--app:circleBroken="true"-->
                    <!--app:end_color="@color/purple_start"-->
                    <!--app:end_progress="100"-->
                    <!--app:isTracked="true"-->
                    <!--app:progressTextColor="#555555"-->
                    <!--app:progressTextSize="@dimen/sp_16"-->
                    <!--app:start_color="@color/purple_end"-->
                    <!--app:start_progress="45"-->
                    <!--app:track_width="2dp" />-->
                <com.yijiuyiyiedu.xuetang.module.ui.custom.DownloadProgressView
                    android:id="@+id/fragment_myDownload_progress"
                    android:layout_width="@dimen/dp_20"
                    app:color="#6317A5"
                    android:layout_height="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_20" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>