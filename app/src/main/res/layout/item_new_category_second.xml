<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@drawable/shape_main_img">

    <ImageView
        android:id="@+id/item_newCategorySecond_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_97"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/item_newCategorySecond_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:text="数码摄影后期高手之路..."
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/sp_14"
        android:textColor="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_11"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_newCategorySecond_price"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="￥298.00"
            android:textColor="#F4555D"
            android:visibility="gone"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/item_newCategorySecond_studyNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="58964人学习"
            android:textColor="#666666"
            android:textSize="@dimen/sp_13" />


    </LinearLayout>

</LinearLayout>