<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/addCourseId_details_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:src="@mipmap/download_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:text="下载"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_19"
            android:textColor="#25265E"
            android:gravity="center" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_36"
                android:layout_marginLeft="@dimen/dp_16"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#25265E"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_15"
                    android:text="手机剩余空间"/>
                <TextView
                    android:id="@+id/download_details_space"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="#BBBCCA"
                    android:text="剩余56.6G"/>
            </LinearLayout>
            <com.moos.library.HorizontalProgressView
                android:id="@+id/download_details_progress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginRight="@dimen/dp_15"
                app:start_color="#6791F6"
                app:end_color="#6791F6"
                app:track_width="@dimen/dp_8"
                app:start_progress="0"
                app:end_progress="100"
                app:progressTextColor="#696969"
                app:corner_radius="@dimen/dp_12"
                app:progressTextVisibility="false"
                app:isTracked="true"
                app:trackColor="#f4f4f4"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/download_details_recyclerView"
                android:layout_width="match_parent"
                android:overScrollMode="never"
                android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>
        </LinearLayout>
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#F8F8F8"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:id="@+id/download_details_allCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#25265E"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_32"
                android:textSize="@dimen/sp_16"
                android:text="下载更多"/>
            <TextView
                android:layout_weight="1"
                android:layout_width="@dimen/activity_horizontal_margin_0.5dp"
                android:layout_height="@dimen/activity_horizontal_margin_0.5dp" />
            <TextView
                android:id="@+id/download_details_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#25265E"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_16"
                android:text="全部暂停"/>
        </LinearLayout>
    </RelativeLayout>



</LinearLayout>