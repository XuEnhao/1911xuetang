<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/shape_course_details_share"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_26">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:layout_centerInParent="true"
            android:textColor="#25265E"
            android:text="分享"/>
        <ImageView
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/share_back"
            android:layout_marginRight="@dimen/dp_15"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_26"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/share_wechat"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:scaleType="centerCrop"
                android:src="@mipmap/share_wechat"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="#787993"
                android:text="微信"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_wechat_circle"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:scaleType="centerCrop"
                android:src="@mipmap/share_wechat_circle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:textSize="@dimen/sp_13"
                android:textColor="#787993"
                android:text="朋友圈"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_weibo"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:scaleType="centerCrop"
                android:src="@mipmap/share_weibo"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:textSize="@dimen/sp_13"
                android:textColor="#787993"
                android:text="微博"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_qq"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/dp_55"
                android:layout_height="@dimen/dp_55"
                android:scaleType="centerCrop"
                android:src="@mipmap/share_qq"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:layout_marginTop="@dimen/dp_7"
                android:textColor="#787993"
                android:text="QQ"/>
        </LinearLayout>
        
    </LinearLayout>


</LinearLayout>