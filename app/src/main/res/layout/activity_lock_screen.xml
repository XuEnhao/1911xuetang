<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/moveview"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/underView"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/lock_screen_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lock_screen_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:text="1:55"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/lock_screen_date"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="4月2日 周一"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <TextView
                android:id="@+id/lock_screen_title"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="乌兰巴托" />

            <TextView
                android:id="@+id/lock_screen_pause"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="暂停"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_marginBottom="50dp" />


        </LinearLayout>
    </RelativeLayout>


</LinearLayout>