<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:id="@+id/call_business"
    android:background="@color/normal_backgroud"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent">
    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/callBus_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/normal_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:text="联系商务"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_19"
            android:textColor="#25265E"
            android:gravity="center" />
        <TextView
            android:id="@+id/callBus_commit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:text="提交"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_16"
            android:textColor="#6317A5"
            android:gravity="center" />
    </RelativeLayout>
    <!--输入框-->
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/normal_backgroud"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/normal_backgroud"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/call_business_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_17"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_height="@dimen/dp_90">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_90"
                        android:src="@mipmap/call_bus" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_23"
                        android:layout_marginTop="@dimen/dp_17"
                        android:textColor="#ffffff"
                        android:layout_height="wrap_content"
                        android:text="热线：400-8989-8989"/>
                    <TextView
                        android:layout_width="@dimen/dp_75"
                        android:layout_height="@dimen/dp_25"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_21"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#ffffff"
                        android:text="拨打热线"
                        android:background="@drawable/shape_call_bus"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/titleTextColor"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginRight="@dimen/dp_18"
                    android:lineSpacingExtra="@dimen/dp_5"
                    android:textSize="@dimen/sp_15"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="如果您对1911学堂的课程感兴趣，留下您的企业名称和联系方式，60分钟内专业的商务团队将会与您联系。"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:background="@color/normal_backgroud"
                android:layout_height="wrap_content">
                <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                    android:id="@+id/callBus_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:background="#ffffff"
                    android:cursorVisible="true"
                    android:hint="请输入联系人姓名"
                    android:inputType="text"
                    android:textCursorDrawable="@null"
                    android:paddingLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_16" />
                <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                    android:id="@+id/callBus_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:hint="请输入手机号"
                    android:inputType="phone"
                    android:paddingLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_16" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="@dimen/dp_2"
                    android:background="#ffffff"
                    android:orientation="horizontal">


                    <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                        android:id="@+id/callBus_verifyNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:layout_weight="1"
                        android:background="#ffffff"
                        android:textCursorDrawable="@null"
                        android:cursorVisible="true"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:paddingLeft="@dimen/dp_16"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/callBus_getVerify"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_30"
                        android:background="#ffffff"
                        android:layout_marginRight="@dimen/dp_20"
                        android:gravity="center_vertical"
                        android:text="获取验证码"
                        android:textColor="#6317A5"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
                <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                    android:id="@+id/callBus_company"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:hint="请输入公司名称"
                    android:inputType="text"
                    android:paddingLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_16" />
                <com.yijiuyiyiedu.xuetang.module.ui.custom.MyClearEditText
                    android:id="@+id/callBus_companyAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_55"
                    android:layout_marginTop="2dp"
                    android:background="#ffffff"
                    android:cursorVisible="true"
                    android:textCursorDrawable="@null"
                    android:hint="请输入公司地址"
                    android:inputType="text"
                    android:paddingLeft="@dimen/dp_16"
                    android:textSize="@dimen/sp_16" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>