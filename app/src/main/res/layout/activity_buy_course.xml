<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/buyCourse_statusBar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/applyCompanyNumber_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:src="@mipmap/register_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:text="购买详情"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_15"
            android:textColor="#333333"
            android:gravity="center" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="购买用户:" />

            <TextView
                android:id="@+id/buyCourse_buyUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="XXXXXXX科技有限公司" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingLeft="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_14"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="@dimen/sp_14"
                android:text="手机号:" />

            <TextView
                android:id="@+id/buyCourse_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:textColor="#333333"
                android:text="15311448246" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_24"
            android:background="#ffffff"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="@dimen/sp_13"
                android:gravity="center"
                android:textColor="#666666"
                android:text="实付金额：" />

            <TextView
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:textColor="#F4555D"
                android:textSize="@dimen/sp_12"
                android:text="¥" />

            <TextView
                android:id="@+id/buyCourse_finalPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#F4555D"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/sp_15"
                android:text="199.00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffffff"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/buyCourse_courseImg"
                android:layout_width="@dimen/dp_130"
                android:layout_height="@dimen/dp_80"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/buyCourse_courseName"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="#000000"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    android:text="Office2016 新特性案" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/buyCourse_bought"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="@dimen/sp_12"
                        android:visibility="gone"
                        android:textColor="#666666"
                        android:text="已购买：10" />

                    <TextView
                        android:id="@+id/buyCourse_newAddNum"
                        android:layout_width="wrap_content"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:text="新增人数：15"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textColor="#666666"
                        android:text="单价:" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content"
                        android:textColor="#F4555D"
                        android:textSize="@dimen/sp_12"
                        android:text="¥" />

                    <TextView
                        android:id="@+id/buyCourse_onePrice"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="#F4555D"
                        android:textStyle="bold"
                        android:textSize="@dimen/sp_14"
                        android:text="199.00" />

                    <TextView
                        android:id="@+id/buyCourse_num"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_13"
                        android:textSize="@dimen/sp_12"
                        android:textColor="#666666"
                        android:text="x15" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:background="#ffffff"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/buyCourse_del"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:background="@drawable/shape_buy_course"
                android:textStyle="bold"
                android:text="—"/>
            <EditText
                android:id="@+id/buyCourse_number"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:maxLength="4"
                android:background="@drawable/shape_buy_course"
                android:inputType="number"
                android:minEms="3"
                android:gravity="center"/>

            <TextView
                android:id="@+id/buyCourse_add"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:background="@drawable/shape_buy_course"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:text="+"/>
        </LinearLayout>


        <TextView
            android:id="@+id/buyCourse_buy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#773685"
            android:textSize="@dimen/sp_15"
            android:paddingRight="@dimen/dp_53"
            android:paddingLeft="@dimen/dp_53"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textStyle="bold"
            android:text="去付款" />
    </LinearLayout>

</LinearLayout>