<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <View
        android:id="@+id/projectDetails_statusBar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/projectDetails_back"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:padding="13dp"
            android:src="@mipmap/register_back" />

        <TextView
            android:id="@+id/projectDetails_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:text="党政干部定制研修项目"
            android:layout_centerInParent="true"
            android:textSize="@dimen/sp_15"
            android:textColor="#333333"
            android:gravity="center" />
    </RelativeLayout>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/projectDetails_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="#ffffff"
        app:tl_textSelectColor="#773685"
        app:tl_textUnselectColor="#999999"
        app:tl_iconVisible="false"
        app:tl_indicator_height="2dp"
        app:tl_indicator_width="@dimen/dp_50"
        app:tl_indicator_color="#773685"
        app:tl_textsize="@dimen/sp_15"/>

    <!--<android.support.design.widget.TabLayout-->
        <!--android:id="@+id/projectDetails_tabLayout"-->
        <!--android:layout_width="match_parent"-->
        <!--android:background="#ffffff"-->
        <!--app:tabIndicatorColor="#773685"-->
        <!--app:tabTextColor="#999999"-->
        <!--app:tabMode="fixed"-->
        <!--app:tabIndicatorHeight="2dp"-->
        <!--app:tabTextAppearance="@style/ProjectTabLayoutTextStyle"-->
        <!--app:tabSelectedTextColor="#773685"-->
        <!--android:layout_height="@dimen/dp_40"></android.support.design.widget.TabLayout>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/projectDetails_viewPager"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_weight="1"
        android:layout_height="wrap_content"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/projectDetails_price"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_15"
            android:background="#ffffff"
            android:textColor="#222222"
            android:textStyle="bold"
            android:gravity="center"
            android:text="¥1.00/人" />

        <TextView
            android:id="@+id/projectDetails_buyProject"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_15"
            android:background="#773685"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:gravity="center"
            android:text="购买项目" />
    </LinearLayout>

</LinearLayout>