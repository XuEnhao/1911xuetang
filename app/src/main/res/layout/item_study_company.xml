<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/item_study_linear"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <ImageView
        android:id="@+id/item_study_classImg"
        android:layout_width="@dimen/dp_113"
        android:layout_height="@dimen/dp_113"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/item_study_className"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="@dimen/dp_8"
        android:text="高级office实践课"
        android:textColor="#222222"
        android:textSize="@dimen/sp_13" />

    <TextView
        android:id="@+id/item_study_classSchedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="20dp"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="观看到：第三节"
        android:textSize="@dimen/sp_11" />

    <LinearLayout
        android:id="@+id/item_study_numLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_study_bought"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:layout_weight="1"
            android:textColor="#666666"
            android:text="已购:10人" />

        <TextView
            android:id="@+id/item_study_newAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_11"
            android:textColor="#666666"
            android:text="新增:10人" />
    </LinearLayout>

    <Button
        android:id="@+id/study_buyBtn"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_21"
        android:text="购买"
        android:textColor="#FEFEFE"
        android:textSize="@dimen/sp_12"
        android:background="#773685" />


</LinearLayout>